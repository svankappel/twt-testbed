menu "CoAP client"

config COAP_TWT_TESTBENCH_SERVER
  bool "Using TWT testbench server"

config COAP_TEST_SERVER_HOSTNAME
	string "CoAP server hostname or address"

config COAP_TEST_SERVER_PORT
	int "CoAP server port"

config COAP_TEST_RESOURCE
  depends on !COAP_TWT_TESTBENCH_SERVER
  string "Resource on server for the tests"


endmenu


choice
prompt "Select IP protocol"

config IP_PROTO_IPV4
  bool "IPv4"

config IP_PROTO_IPV6
  bool "IPv6"

endchoice



