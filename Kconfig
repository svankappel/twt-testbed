  int "Iterations for Test 1"
  depends on SENSOR_PS_TEST_1

config SENSOR_PS_TEST_1_SEND_INTERVAL
  int "Send interval for Test 1 (ms)"
  depends on SENSOR_PS_TEST_1

choice SENSOR_PS_TEST_1_MODE
  prompt "Mode for Test 1"
  depends on SENSOR_PS_TEST_1 && SENSOR_PS_TEST_1_PS_ENABLED
  config SENSOR_PS_TEST_1_MODE_LEGACY
    bool "Legacy"
  config SENSOR_PS_TEST_1_MODE_WMM
    bool "WMM"
endchoice

